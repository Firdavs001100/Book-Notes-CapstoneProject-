<%- include('partials/header.ejs') %>

<div class="container mainPageCon">
    <div class="welcomeCon">
        <h1>Welcome to NoteCore</h1>
        <p>In this website, I post reviews of books that I read and gave them a rating on how much I recommend it to others, as well as key notes in this book.</p>
    </div>
    <% locals.posts.forEach(post => {%>
    <div class="postCon">
        <div class="detailsCon">
            <img src="https://covers.openlibrary.org/b/id/<%= post.cover_id %>-M.jpg" alt="cover of the book">
            <div class="bookInfoCon">
                <p class="title"><%= post.title %></p>
                <div class="yearAndIsbnCon">
                    <p class="publishedYear">Published Year: <%= post.published_year %></p>
                    <p class="divider">|</p>
                    <p class="isbn">ISBN: <%= post.isbn %></p>
                </div>
                <p class="rating">Rating: <%= post.rate %>/10</p>
            </div>
        </div>
        <div class="reviewCon">
            <p class="review">
                <%=  post.review.length > 50 ? post.review.substring(0, 50): post.review %>
                <a class="readMoreBtn" href="/review/<%= post.id %>">Read More</a>      
            </p>
        </div>
    </div>
    <% }); %>
</div>

<%- include('partials/footer.ejs') %>